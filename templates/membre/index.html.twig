{% extends 'base.html.twig' %}

{% block title %}Liste des membres{% endblock %}

{% block monTitre %}Liste des membres{% endblock %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Téléphone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for membre in membres %}
            <tr>
                <td>{{ membre.id }}</td>
                <td>{{ membre.nom }}</td>
                <td>{{ membre.prenom }}</td>
                <td>{{ membre.telephone }}</td>
                <td>
                    <a href="{{ path('membre_show', {'id': membre.id}) }}">show</a>
                    <a href="{{ path('membre_edit', {'id': membre.id}) }}">Je modifie le profil</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun membre inscrit</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('membre_new') }}">Inscrire un nouveau membre !</a>
{% endblock %}
