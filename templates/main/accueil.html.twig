{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block monTitre %}Bienvenue !!!{% endblock %}

{% block body %}
</div>
<div class="container">
    <h2>Nos compagnons disparus</h2>
    <div class="row flex">
        {% for animal in animaux %}
        <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="{{path('animal_show', {id: animal.id})}}">{{ animal.nom }}</a>
                    </h5>
                    <p class="card-text">
                        {{ animal.commentaire }} </p>
                    <div class="text-primary">{{ animal.user}}</div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
