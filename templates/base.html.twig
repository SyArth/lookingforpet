<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <header>
            <h1><a href="{{path('accueil')}}"></a>Looking for pet</h1>
            <ul>
                {% for animal in animaux %}
                    <li><a href="{{path('animal', {slug: Animal.slug})}}"></a>{{animal}}</li>
                {% endfor %}
            </ul>
        </header>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
