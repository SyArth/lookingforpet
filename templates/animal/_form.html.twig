{{ form_start(form) }}
    {{ form_widget(form) }}

    {# VÃ©rifier si la route est "animal_edit" on affiche les images #}
    {% if app.request.attributes.get('_route') == 'animal_edit' %}
        <h2>Images</h2>
        {% for image in animal.images %}
            <div>
                <img src="{{ asset('/uploads/photos' ~ image.nom) }}" alt="Image" width="150">
                <a href="{{ path('animal_delete_image', {id: image.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">Supprimer</a>
            </div>
        {% endfor %}
    {% endif %}
    <button class="btn btn-success" type="submit">{{ button_label|default('Validez') }}</button>
{{ form_end(form) }}