{% for animal in row %}
<div class="row col-md-4">
    <div class="card mb-3 mr-3">
        <div class="image card-body bg-white rounded shadow">
            <div class="mw-100 overflow-hidden">
                <a href="{{path('animal_show', {slug: animal.slug, id: animal.id})}}">
                    <img src="uploads/photos/animal.png" alt="{{animal.nom}}" class="w-100 rounded-top">
                </a>
            </div>
            <h5 class="card-title">
                <a href="{{path('animal_show', {slug: animal.slug, id: animal.id})}}">{{ animal.nom | badge}}</a>
            </h5>
            <p class="card-text">
                {{ animal.commentaire }} </p>
           <div class="text-primary"><a class="btn btn-secondary btn-xs" href="{{ path('animal_show', {'id': animal.id}) }}">show</a>
                <a class="btn btn-info btn-xs" href="{{ path('animal_edit', {'id': animal.id}) }}">edit</a></div>
        </div>
    </div>
</div>
{% endfor %}
